<view class="page__bd">
<view class="weui-cells__title">单选列表项</view>
    <view class="weui-grids">
        <block wx:for="{{score}}" wx:key="index">
            <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                <image class="weui-grid__icon"  src="../../images/icon_tabbar.png"  wx:if="{{index<9}}"/>
                <button size='mini' wx:else>兑换</button>
            </navigator>
        </block>
    </view>
</view>




<view class="page__bd">
    <view class="weui-cells__title">已兑换杯数:{{prize.length}}杯</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
                <block wx:for="{{prize}}">
                    <image src="../../images/icon_coffee.png" style="width: 50px; height: 50px;"/>
                </block>

                 <image class="weui-grid__icon"  src="../../images/icon_tabbar.png"  wx:if="{{prize.length==0}}"/>
            </view>
        </view>
    </view>
</view>


