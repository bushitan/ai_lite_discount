.color{
    display: flex;
    justify-content: space-around;
    background-color: #ffffff;
}
.color .node{
    display: flex;
    align-items: center;
    padding: 5px 10px;
    border: 1rpx #888 solid;
}
.color .node input{
    background-color: #ffffff;
    width: 60px;
    font-size: 9pt;
}

.pick{

}


.control_flex{
    display: flex;
    justify-content: center;
    align-items: center;
}

.control{
    z-index: 99999;
    margin-top: 15px;
    text-align: center;
}
.control navigator{
    width: 32px;
    height: 32px;
}

.control .center{
    display: flex;
    justify-content: center;
}

.control image  {
    z-index: 99999;
    width: 32px;
    height: 32px;
}

.control .left{
    /* margin-right: 26px; */
}

.control label{
    width: 36px;
    line-height: 32px;
    text-align: center;
}

.control .click{
    background-color: #eee;
}















.header{
    padding:  15px 15px 0;
}
.header .content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx #eee solid ;
    padding-bottom: 15px;
    font-size: 9pt;
    color: #ff726a;
}

textarea{
    width: 100%;
    background-color: #ffff;
    border: 1rpx #aaa dashed;
    border-radius: 5px;
}



